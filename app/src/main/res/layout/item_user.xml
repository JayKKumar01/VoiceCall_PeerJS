<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:elevation="4dp"
        android:layout_margin="2dp"
        android:background="@drawable/bg_big_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:id="@+id/item_image"
            app:layout_constraintVertical_bias="0"
            android:background="@drawable/bg_img"
            android:elevation="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="1dp"
            android:src="@drawable/bg_img_sample"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="joi kjkidu rjrjjrre"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:shadowColor="#B2DFDB"
            android:textStyle="bold"
            android:shadowDx="2"
            android:shadowRadius="5"
            android:shadowDy="2"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:elevation="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintTop_toBottomOf="@id/item_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/blue_theme"
            android:textSize="11sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="40dp"
            android:layout_height="0dp"
            app:layout_constraintVertical_bias="1"
            android:elevation="4dp"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toTopOf="@id/item_image"
            app:layout_constraintBottom_toBottomOf="@id/item_image"
            app:layout_constraintLeft_toLeftOf="@id/item_image"
            app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:id="@+id/mic"
                android:src="@drawable/mic_off"
                android:layout_width="22dp"
                android:layout_height="0dp"
                android:elevation="2dp"
                android:layout_margin="2dp"
                android:background="@drawable/bg_small_icon"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintHeight_percent=".25"
                android:padding="3dp"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:tint="@color/white" />
            <ImageView
                android:id="@+id/deafen"
                android:src="@drawable/deafen_on"
                android:layout_width="22dp"
                android:layout_height="0dp"
                android:elevation="2dp"
                android:layout_margin="2dp"
                android:background="@drawable/bg_small_icon"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintHeight_percent=".25"
                android:padding="3dp"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/mic"
                app:layout_constraintRight_toRightOf="parent"
                app:tint="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
