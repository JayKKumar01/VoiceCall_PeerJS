<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:elevation="4dp"
        android:layout_margin="2dp"
        android:background="@drawable/bg_big_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/image_layout"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintVertical_bias="0"
            android:elevation="4dp"
            android:layout_margin="2dp"
            app:cardCornerRadius="500dp"
            android:padding="2dp"
            android:background="@drawable/bg_round"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/item_card"
                app:cardCornerRadius="500dp"
                android:background="@drawable/bg_card"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="500dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/item_image"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bg_img_sample"/>

                </androidx.cardview.widget.CardView>


            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>




        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="joi kjkidu rjrjjrre"
            android:layout_marginTop="10dp"
            android:shadowColor="#B2DFDB"
            android:textStyle="bold"
            android:shadowDx="2"
            android:shadowRadius="5"
            android:shadowDy="2"
            android:elevation="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintTop_toBottomOf="@id/image_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/blue_theme"
            android:textSize="15sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".33"
            app:layout_constraintVertical_bias="1"
            android:elevation="4dp"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/image_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/micLayout"
                app:layout_constraintWidth_percent=".5"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/mic"
                android:src="@drawable/mic_img"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent=".5"
                android:elevation="2dp"
                android:layout_margin="2dp"
                android:background="@drawable/bg_small_icon"
                app:layout_constraintDimensionRatio="1"
                android:padding="3dp"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:tint="@color/white" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent=".05"
                app:layout_constraintHeight_percent=".3"
                app:layout_constraintVertical_bias=".28"
                app:layout_constraintHorizontal_bias=".49"
                android:elevation="2dp"
                app:layout_constraintTop_toTopOf="@id/mic"
                app:layout_constraintBottom_toBottomOf="@id/mic"
                app:layout_constraintLeft_toLeftOf="@id/mic"
                app:layout_constraintRight_toRightOf="@id/mic">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/item_view"
                    app:layout_constraintVertical_bias="1"
                    app:layout_constraintHeight_percent=".5"
                    android:background="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageView
                android:id="@+id/deafen"
                android:src="@drawable/deafen_on"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent=".5"
                android:elevation="2dp"
                android:layout_margin="2dp"
                android:background="@drawable/bg_small_icon"
                app:layout_constraintDimensionRatio="1"
                android:padding="3dp"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/mic"
                app:layout_constraintRight_toRightOf="parent"
                app:tint="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
